<h1>ユーザーページ</h1>
<% if @user.image %>
	<%= image_tag @user.image.to_s %>
<% end %>
<div>
	<span><%= @user.display_name %></span>
	<span>@<%= @user.username %></span>
</div>
<div><%= @user.bio %></div>

<h2>ログ一覧</h2>
<% @exhb_logs.each do |exhb_log| %>
	<%= link_to exhibition_path(exhb_log.exhibition) do %>
		<div class="bold"><%= exhb_log.exhibition.name %></div>
	<% end %>
	<div><%= exhb_log.created_at %></div>
	<% if exhb_log.star %>
		<div>★<%= exhb_log.star %></div>
	<% end %>
	<div><%= exhb_log.body %></div>
	<br>
	<% exhb_log.art_logs.each do |art_log| %>
		<%= link_to art_path(art_log.art) do %>
			<div><%= art_log.art.name %></div>
		<% end %>
		<div><%= art_log.art.artist.name %></div>
		<div><%= art_log.art.year %></div>
		<% if art_log.star %>
			<div>★<%= art_log.star %></div>
		<% end %>
		<div><%= art_log.body %></div>
		<br>
	<% end %>
<% end %>
