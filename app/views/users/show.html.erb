<% if user_signed_in? && @user == current_user %>
  <h1>マイページ</h1>
<% else %>
  <h1>ユーザーページ</h1>
<% end %>

<%= image_tag @user.image_url(:thumb) if @user.image.present? %>
<div><span><%= @user.display_name %></span><span>@<%= @user.username %></span></div>
<div><%= @user.bio %></div>

<% if @user == current_user %>
	<div><%= link_to "プロフィール編集", "#{@user.username}/edit" %></div>
<% end %>

<h2>クリップした展覧会一覧</h2>
<div class="features">
  <% @clipped_exhibitions.each do |exhb| %>
    <article>
      <%= render partial: "exhibitions/show", locals: {exhb: exhb} %>
    </article>
  <% end %>
</div>

<h2>行った展覧会一覧</h2>
<div class="features">
  <% @visited_exhibitions.each do |exhb| %>
    <article>
      <%= render partial: "exhibitions/show", locals: {exhb: exhb} %>
    </article>
  <% end %>
</div>

<h2>ログ一覧</h2>
<%= render partial: "logs/index", locals: {exhb_logs: @exhb_logs} %>
