<div class="mt20" style="position:fixed">
  <%= alert %>
</div>
<section class="mt100">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mt10 row">
      <div class="col-10  col-12-xsmall">
        <%= f.text_field :login, autofocus: true, placeholder: "ユーザネーム または メールアドレス" %>
      </div>
    </div>

    <div class="mt10 row">
      <div class="col-10  col-12-xsmall">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt20 row">
          <div class="col-12">
            <input type="checkbox", name="user[remember_me]", id="user_remember_me" />
            <label for="user_remember_me">ログインしたままにする</label>
          </div>
        </div>
      <% end %>

      <div class="mt10 row">
        <div class="col-12 actions">
          <%= f.submit "ログイン" %>
        </div>
      </div>
    </div>

  <% end %>
  <%= render "users/shared/links" %>
</section>
