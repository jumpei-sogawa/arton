<div>views/art_logs/_index.html.erb</div>

<% @art_logs.each do |art_log| %>
  <% @user = art_log.user %>
  <%= render "users/user" %>

	<% @art_log = art_log %>
	<%= render "art_logs/show" %>

	<% if art_log.art_log_comments.present? %>
    <% @user = art_log.art_log_comments.last.user %>
    <%= render "users/user" %>
		<div><%= art_log.art_log_comments.last.body %></div>
	<% end %>

	<% if user_signed_in? %>
		<%= form_with(model: @art_log_comment, url: art_log_art_log_comments_path(art_log)) do |form| %>
			<%= form.text_area :body %>
			<%= form.submit "送信" %>
		<% end %>
	<% end %>

	<br>

<% end %>