<div class="adjust-box box-1x1">
  <div class="inner-box align-center">
    <% if art.image.present? %>
      <%= image_tag art.image, class: "w100 h100 image", style: "object-fit: cover;" %>
    <% else %>
      <i class="far fa-gem"></i>
    <% end %>

    <div class="bg-art-stars"></div>
    <div class="flex-container center art-stars">
      <h3 class="mb0">
        <i class="fas fa-star yellow"></i>
        <i class="fas fa-star yellow o60"></i>
        <i class="fas fa-star light-gray o60"></i>
      </h3>
    </div>
  </div>
</div>

<div class="align-center dark"><%= art.name.first(6) %><% if art.name.length > 6 %>...<% end %></div>
