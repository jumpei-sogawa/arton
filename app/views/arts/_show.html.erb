<% if art.image.present? %>
  <div class="image mr10 w100"><a href="/arts/<%=art.id%>" class=""><%= image_tag art.image, class: "w100" %></a></div>
<% else%>
  <% if art.liked_image? %>
    <div class="image mr10 w100"><a href="/arts/<%=art.id%>" class=""><%= image_tag art.liked_image.to_s, class: "w100" %></a></div>
  <% else %>
    <div><a href="/arts/<%=art.id%>" class="icon fa-gem mr10"></a></div>
  <% end %>
<% end %>
<div class="content mt10 mb20">
  <h3><a href="/arts/<%=art.id%>"><%= art.name %></a></h3>
  <h2 class="row">
    <div class="col-8">
      <i class="fas fa-star yellow"></i>
      <% if art.star.present? %>
        <span><%= art.star.round(2) %></span>
      <% else %>
        <span>&nbsp;-&nbsp;</span>
      <% end %>
      <span class="denominator">/3</span>
    </div>
    <div class="col-2 pl0">
    </div>
    <div class="col-2 pl0">
    </div>
  </h2>
  <div><%= art.artist.name %>作</div>
  <div class="mb10">（<%= art.year %>年）</div>
  <% if !@title.include?("展覧会") %>
    <div><a href="/exhibitions/<%=art.exhibition.id%>" class="bb0 gray"><%= art.exhibition.name %></a></div>
  <% end %>
</div>
