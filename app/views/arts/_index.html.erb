<div>
  <% arts.each do |art| %>
    <div>
      <%= link_to art_path(art) do %>
        <%= image_tag art.liked_image.to_s, width: "200px" if art.liked_image.present? %>
        <div class="bold"><%= art.name %></div>
        <div>作者：<%= art.artist.name %></div>
        <div>制作年：<%= art.year %></div>
        <% if art.star.present? %>
          <div>★<%= art.star.round(2) %></div>
        <% end %>
      <% end %>
    </div>
    <br>
  <% end %>
</div>
