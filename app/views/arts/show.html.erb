<h1>作品詳細</h1>
<%= image_tag @art.liked_image.to_s if @art.liked_image.present?%>
<h2><%= @art.name %></h2>
<div>作者：<%= @art.artist.name %></div>
<div>制作年：<%= @art.year %></div>
<% if @art.star.present? %>
	<div>★<%= @art.star.round(2) %></div>
<% end %>
<br>

<h2>展覧会</h2>
<% exhb = @art.exhibition %>
<%= link_to exhibition_path(exhb) do %>
	<% if exhb.image.present? %>
		<%= image_tag exhb.image %>
	<% end %>
	<div><%= exhb.name %></div>
	<div><%= exhb.start_date %>〜<%= exhb.end_date %></div>
<% end %>

<h2>作品のログ一覧</h2>
<%= render "art_logs/index" %>