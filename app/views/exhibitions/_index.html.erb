<% exhibitions.each do |exhb| %>
	<article>
		<% if exhb.image.present? %>
			<span><a href="/exhibitions/<%=exhb.id%>" class="image mr10"><%= image_tag exhb.image %></a></span>
		<% else%>
			<span><a href="/exhibitions/<%=exhb.id%>" class="icon fa-gem mr10"></a></span>
		<% end %>
		<div class="content">
			<h3><a href="/exhibitions/<%=exhb.id%>"><%= exhb.name %></a></h3>
			<p>
				<div>@<%= exhb.museum.name %></div>
				<div><%= exhb.start_date %>〜<%= exhb.end_date %></div>
				<% if exhb.star.present? %>
					<div>★<%= exhb.star.round(2) %></div>
				<% end %>
			</p>
		</div>
	</article>
<% end %>