<% exhb = @exhibition %>

<h1><%= exhb.name %></h1>

<% if exhb.image %>
	<%= image_tag exhb.image %>
<% end %>
<br>

<% if exhb.star %>
	<div>★<%= exhb.star.round(2) %></div>
<% end %>
<%= link_to "行った！", new_exhibition_log_path(exhb) %>
<div>興味あり！</div>

<h2>詳細</h2>
<h3>会場</h3>
<div><%= link_to exhb.museum.name, museum_path(exhb.museum) %></div>
<div><%= exhb.museum.address %></div>

<h3>会期</h3>
<div><%= exhb.start_date %>〜<%= exhb.end_date %></div>

<h3>入場料</h3>
<div style="white-space:pre-wrap"><%= exhb.fee %></div>

<h3>休館日</h3>
<div><%= exhb.closing_day %></div>

<h3>開館時間</h3>
<div><%= exhb.opening_hours %></div>

<h3>お問い合わせ先</h3>
<div><%= exhb.phone %></div>

<h3>主催</h3>
<div><%= exhb.organizer %></div>

<h3>公式サイト</h3>
<% if exhb.website.present? %>
	<div><%= link_to exhb.website, exhb.website, target: :_blank %></div>
<% end %>

<% if @arts.present?%>
	<h2>人気の作品</h2>
	<% @arts.each do |art| %>
		<%= link_to art_path(art) do %>
			<% if art.image %>
				<%= image_tag art.image %>
			<% end %>
			<div class="bold"><%= art.name %></div>
			<div>作者：<%= art.artist.name %></div>
			<div>制作年：<%= art.year %></div>
			<% if art.star %>
				<div>★<%= art.star.round(2) %></div>
			<% end %>
		<% end %>
		<br>
	<% end %>
<% end %>

<h2>この展覧会へのコメント</h2>
<% @exhb_logs.each do |exhb_log| %>
	<%= link_to user_path(exhb_log.user) do %>
		<% if exhb_log.user.image %>
			<%= image_tag exhb_log.user.image, height: "30px" %>
		<% end %>
		<div><%= exhb_log.user.display_name %></div>
		<div>@<%= exhb_log.user.username %></div>
	<% end %>
	<div><%= exhb_log.created_at %></div>
	<% if exhb_log.star %>
		<div>★<%= exhb_log.star %></div>
	<% end %>
	<div><%= exhb_log.body %></div>
	<br>
<% end %>