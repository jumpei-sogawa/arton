<% exhb = @exhibition %>

<h1><%= exhb.name %></h1>

<div><%= image_tag exhb.image if exhb.image.present? %></div>

<% if exhb.star %>
	<div>⭐️<%= exhb.star.round(2) %></div>
<% end %>

<%= link_to "行った！", new_exhibition_log_path(exhb) %>
<% if user_signed_in? %>
	<% if exhb_clip = ExhbClip.find_by(user_id: current_user.id, exhibition_id: exhb.id) %>
		<div><%= link_to "クリップを外す", exhibition_exhb_clip_path(exhb, exhb_clip), method: :delete %></div>
	<% else %>
		<div><%= link_to "クリップ！", exhibition_exhb_clips_path(exhb), method: :post %></div>
	<% end %>
<% else %>
	<div><%= link_to "クリップ！", exhibition_exhb_clips_path(exhb), method: :post %></div>
<% end %>

<h2>展覧会詳細</h2>
<h3>会場</h3>
<div><%= link_to exhb.museum.name, museum_path(exhb.museum) %></div>
<div><%= exhb.museum.address %></div>

<h3>会期</h3>
<div><%= exhb.start_date %>〜<%= exhb.end_date %></div>

<h3>入場料</h3>
<div style="white-space:pre-wrap"><%= exhb.fee %></div>

<h3>休館日</h3>
<div><%= exhb.closing_day %></div>

<h3>開館時間</h3>
<div><%= exhb.opening_hours %></div>

<h3>お問い合わせ先</h3>
<div><%= exhb.phone %></div>

<h3>主催</h3>
<div><%= exhb.organizer %></div>

<h3>公式サイト</h3>
<% if exhb.website.present? %>
	<div><%= link_to exhb.website, exhb.website, target: :_blank %></div>
<% end %>

<% if @arts.present? %>
	<h2>人気の作品一覧</h2>
	<%= render "arts/index" %>
<% end %>

<h2>展覧会のログ一覧</h2>
<%= render "exhb_logs/index" %>
