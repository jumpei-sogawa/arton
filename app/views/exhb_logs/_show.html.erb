<div class="row">
  <div class="col-4">
    <h2 class="mb10">
        <i class="fas fa-star yellow"></i>
        <% if exhb_log.star.present? %>
          <span><%= exhb_log.star %></span>
        <% else %>
          <span>&nbsp;-&nbsp;</span>
        <% end %>
        <span class="denominator">/3</span>
      </h2>
  </div>

  <div class="col-8">
    <div class="dark is-text"><%= exhb_log.body %></div>

    <div><%= l exhb_log.created_at, format: :short_date %></div>

    <div class="row">
      <div class="col-5">
        <div id="exhb_log_like_<%= exhb_log.id %>">
          <%= render partial: "exhb_log_likes/button", locals: {exhb_log: exhb_log} %>
        </div>

        <div id="exhb_log_likes_count_<%= exhb_log.id %>">
          <%= render partial: "exhb_log_likes/count", locals: {exhb_log: exhb_log} %>
        </div>
      </div>

      <div class="col-7">
        <a href="/" class="button dark">コメントする</a>
      </div>
    </div>
  </div>

</div>
