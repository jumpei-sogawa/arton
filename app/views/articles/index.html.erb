<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
         <% if user_signed_in? %>
          <% if current_user.id == 1 %>
            <td><%= link_to 'Edit', edit_article_path(article), class: "button" %></td>
            <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <% if current_user.id == 1 %>
    <%= link_to 'New Article', new_article_path, class: "button" %>
  <% end %>
<% end %>